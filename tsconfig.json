{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/types"], // Aseg√∫rate de incluir `./src/types`
    "types": ["node", "express"]
  },
  "include": ["src/**/*"], // Incluye todos los archivos en `src`
  "exclude": ["node_modules"]
}